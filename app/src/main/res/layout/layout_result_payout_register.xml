<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   style="@style/loginCard"
                                   android:layout_gravity="center"
                                   android:layout_marginTop="@dimen/loginViewsMargin"
                                   android:layout_marginBottom="@dimen/loginViewsMargin"
                                   android:background="@color/whiteCardColor"
                                   android:elevation="5dp"
                                   app:cardCornerRadius="@dimen/loginCardRadius">

    <ScrollView style="@style/parent">

        <LinearLayout
                style="@style/linearParent"
                android:layout_gravity="center"
                android:padding="@dimen/loginViewsMargin">

            <TextView
                    style="@style/normalTextPrimary"
                    android:layout_marginTop="@dimen/loginViewsMargin"
                    android:gravity="left"
                    android:text="Transaction Id (txId)"
                    android:textAlignment="gravity" />

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/resultTxId"
                    style="@style/parent"
                    android:layout_marginTop="@dimen/loginViewsMargin">

                <EditText
                        android:id="@+id/editResultTxId"
                        style="@style/modifiedEditText"
                        android:enabled="false"
                        android:inputType="none"
                        android:maxLines="1"
                        android:textColor="#FFEB3B" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                    style="@style/normalTextPrimary"
                    android:layout_marginTop="@dimen/loginViewsMargin"
                    android:gravity="left"
                    android:text="Reference No"
                    android:textAlignment="gravity" />

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/resultReferenceNo"
                    style="@style/parent"
                    android:layout_marginTop="@dimen/loginViewsMargin">

                <EditText
                        android:id="@+id/editResultReferenceNo"
                        style="@style/modifiedEditText"
                        android:enabled="false"
                        android:inputType="none"
                        android:maxLines="1"
                        android:textColor="#FFEB3B" />
            </com.google.android.material.textfield.TextInputLayout>



                <EditText
                        android:id="@+id/editResultValidityPeriod"
                        style="@style/modifiedEditText"
                        android:enabled="false"
                        android:inputType="none"
                        android:maxLines="1"
                        android:textColor="#FFEB3B" />

            <TextView
                    style="@style/normalTextPrimary"
                    android:layout_marginTop="@dimen/loginViewsMargin"
                    android:gravity="left"
                    android:text="Payout Registered Successfully. Waiting for Approval"
                    android:textAlignment="gravity" />

            <TextView
                    style="@style/normalTextPrimary"
                    android:layout_marginTop="@dimen/loginViewsMargin"
                    android:gravity="center"
                    android:text="Approve"
                    android:textAlignment="gravity" />

            <Button
                    android:id="@+id/buttonApprove"
                    style="@style/checkButton"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/loginViewsMargin"
                    android:textColor="#0000FF" />

            <TextView
                    style="@style/normalTextPrimary"
                    android:layout_marginTop="@dimen/loginViewsMargin"
                    android:gravity="center"
                    android:text="Reject"
                    android:textAlignment="gravity" />

            <Button
                    android:id="@+id/buttonReject"
                    style="@style/disableButton"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/loginViewsMargin"
                    android:textColor="#FF0000" />

            <Button
                    android:id="@+id/buttonDownloadDoneQr"
                    style="@style/downloadDoneButton"
                    android:layout_width="wrap_content"
                    android:layout_height="74dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/loginViewsMargin"
                    android:enabled="false"
                    android:textColor="#fff"
                    android:visibility="gone" />

        </LinearLayout>

    </ScrollView>


</androidx.cardview.widget.CardView>